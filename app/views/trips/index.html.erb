<h1>Listing trips</h1>
<div class="column-group gutters">
        <% @trips.each do |trip| %>
          <div class="large-50">
            <table>
              <tr>
                <td><%= trip.name %></td>
                <td><%= link_to 'Show', trip %></td>
                <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
                <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <tr>
              <% unless trip.waypoints.empty? %>
                <td>this has <%= trip.waypoints.count %> waypoints, add <%= link_to "another", new_trip_waypoint_path(trip) %> </td>
                <% trip.waypoints.each do |waypoint| %>
                  <td><%= link_to waypoint.name, waypoint %></td>
                <% end %>
              <% else %>
                <td>This trip needs waypoints. Add a <%= link_to "waypoint", new_trip_waypoint_path(trip) %></td>
              <% end %>
              </tr>
            </table>
          </div>
        <% end %>
</div>
<br>

